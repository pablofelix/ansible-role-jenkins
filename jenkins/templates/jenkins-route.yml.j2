apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: jenkins-route
  namespace: "{{ jenkins.project }}"
  labels:
    app: jenkins
spec:
  to:
    kind: Service
    name: jenkins-service
    weight: 100
  port:
    targetPort: http
  wildcardPolicy: None
  tls:
    insecureEdgeTerminationPolicy: Allow
    termination: edge